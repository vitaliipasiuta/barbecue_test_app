{
  "name": "barbecue",
  "version": "0.0.1",
  "engines": {
    "node": "^8.9.4",
    "npm": "^5.6.0"
  },
  "main": "index.js",
  "dependencies": {
    "@types/lodash": "^4.14.109",
    "body-parser": "^1.18.3",
    "concurrently": "^3.5.1",
    "express": "^4.15.3",
    "express-joi-validation": "^0.2.1",
    "joi": "^13.3.0",
    "lodash": "^4.17.5",
    "mongodb": "^3.1.0-beta4",
    "mongoose": "^5.1.4",
    "nodemon": "^1.17.5",
    "qs": "^6.5.1",
    "request": "^2.87.0",
    "rimraf": "^2.6.2",
    "tc-nodejs-core-services": "0.0.7-12-0256e385",
    "tslint": "^5.9.1"
  },
  "devDependencies": {
    "@types/debug": "0.0.29",
    "@types/dotenv": "^2.0.20",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.2.3",
    "@types/node": "^6.0.112",
    "@types/sinon": "^4.3.3",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.3.2",
    "gulp-nodemon": "^2.2.1",
    "gulp-process-env": "0.0.2",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-typescript": "^3.1.7",
    "jest": "^22.4.4",
    "nock": "^9.3.0",
    "sinon": "^4.4.8",
    "supertest": "^3.0.0",
    "ts-jest": "^22.0.0",
    "typescript": "^2.9.1",
    "mongodb-prebuilt": "^6.3.3"
  },
  "jest": {
    "transform": {
      ".(ts)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|js)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "modulePaths": [
      "<rootDir>/src/"
    ],
    "silent": false,
    "collectCoverage": true
  },
  "scripts": {
    "start": "gulp start",
    "build": "gulp build",
    "watch-ts": "gulp watch",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run start\"",
    "test": "jest",
    "mongodb:start": "mongod --port 27018 --dbpath test/.mongodb/data --fork --logpath /dev/stdout",
    "mongodb:stop": "mongo admin --port 27018 --eval 'db.shutdownServer()'",
    "test:coverage": "npm run build && nyc gulp test",
    "eslint": "tslint --project tsconfig.json --config tslint.json -t codeFrame 'src/**/*.ts'",
    "docs": "node ./docs/docsServer.js"
  },
  "pre-commit": [
    "eslint",
    "test"
  ]
}
